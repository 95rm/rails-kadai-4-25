<div class="container">
<div class="row">
<div class="col-lg-3">
 <h1>User info</h1>
 <%= form_with model: @user do |f| %>
 <%= image_tag @user.get_profile_image(100,100) %>
 <% end %>
 <table>
 <thead>
  <tr>
   <th>name</th>
   <th></th>
   <th><%= @user.name %></th>
  </tr>
 </thead>
 <tbody>
  <tr>
   <th>introducion</th>
   <th></th>
   <th><%= @user.introduction %></th>
  </tr>
 </tbody>
</table>
<% if user_signed_in? %>
 <%= link_to "編集", edit_user_path(current_user.id) %>
<% else %>
 <%= link_to "編集", user_path(current_user.id) %>
<% end %>

<h1>New book</h1>
 <%= form_with model: @newbook do |f| %>
   <h4>Title</h4>
    <%= f.text_field :title %>
   <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= link_to 'create book' do %>
     <i class=""></i>
    <% end %>
    <%= f.submit 'create book', class: "btn btn-success" %>
 <% end %>
</div>

<div class="col-lg-8">
 <h1>Books</h1>
 <table class="table table-striped">
 <thead>
  <tr>
   <th> </th>
   <th>Title</th>
   <th>Opinion</th>
  </tr>
 </thead>
 <tbody>
  <% @book.each do |book| %>
  <tr>
   <th><%= link_to image_tag book.user.get_profile_image(100,100) %></th>
   <span>
    <th><%= link_to book.title, book_path(book.id) %></th>
   </span>
   <th><%= book.body %></th>
  </tr>
  <% end %>
 </tbody>
</table>
</div>
</div>
</div>