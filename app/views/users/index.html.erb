<div class="container">
<div class="row">
<div class="col-md-3">
<h1>User info</h1>
 <%= image_tag @indexuser.get_profile_image(100,100) %>
<table>
 <thead>
  <tr>
   <th>name</th>
   <th><%= @indexuser.name %></th>
  </tr>
 </thead>
 <tbody>
  <tr>
   <th>introducion</th>
   <th><%= @indexuser.introduction %></th>
  </tr>
 </tbody>
</table>
<%= link_to edit_user_path(@indexuser.id), class:"text-black btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog"></i>
<% end %>

<h1>New book</h1>
 <%= form_with model: @book do |f| %>
   <h4>Title</h4>
    <%= f.text_field :title %>
   <h4>Opinion</h4>
    <%= f.text_area :body %>
   <%= f.submit 'Create Book', class: "btn btn-success"  %>
 <% end %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Users</h2>
<table class="table">
 <thead>
  <tr>
   <th>image</th>
   <th>name</th>
  </tr>
 </thead>
 <% @user.each do |user| %>
 <tbody>
  <tr>
    <th><%= image_tag user.get_profile_image(100,100) %></th>
    <th><h3><%= user.name %></h3></th>
    <th><p><%= link_to "Show", user_path(user.id) %></p></th>
  </tr>
 </tbody>
 <% end %>
</table>
</div>
</div>
</div>

