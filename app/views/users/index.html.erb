<h1>New book</h1>
 <%= form_with model: @book do |f| %>
   <h4>Title</h4>
    <%= f.text_field :title %>
   <h4>Opinion</h4>
    <%= f.text_area :body %>
   <%= f.submit 'create book' %>
 <% end %>

<h2>Users</h2>
<% @user.each do |user| %>
 <div>
   <%= image_tag user.get_profile_image(100,100) %>
   <h3><%= user.name %></h3>
   <p><%= link_to "profile編集", edit_user_path(user.id) %></p>
 </div>
<% end %>
