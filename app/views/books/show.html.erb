<h1>New book</h1>
 <%= form_with model: @book do |f| %>
   <h4>Title</h4>
    <%= f.text_field :title %>
   <h4>Opinion</h4>
    <%= f.text_area :body %>
   <%= f.submit 'create book' %>
 <% end %>


<h1>Book detail</h1>
<table>
 <tbody>
  <tr>
   <span>
    <th><%= link_to @book.user.name, user_path(@user.id) %></th>
   </span>
   <th><%= @book.title %></th>
   <th><%= @book.body %></th>
   <th><%= link_to "Edit", edit_book_path(@book.id) %></th>
   <th><%= link_to "destroy", book_path(@book.id), method: :delete %></th>
  </tr>
 </tbody>
</table>