<div class="container">
<div class="row">

<div class="col-lg-3">
<h1>User info</h1>
<%= form_with model: @user do |f| %>
 <%= image_tag @user.get_profile_image(100,100) %>
<% end %>
<table>
 <thead>
  <tr>
   <th>name</th>
   <th><%= @user.name %></th>
  </tr>
 </thead>
 <tbody>
  <tr>
   <th>introducion</th>
   <th><%= @user.introduction %></th>
  </tr>
 </tbody>
</table>
<%= link_to "編集", edit_user_path(@user.id) %>

<h1>New book</h1>
 <%= form_with model: @book do |f| %>
   <h4>Title</h4>
    <%= f.text_field :title %>
   <h4>Opinion</h4>
    <%= f.text_area :body %>
   <%= f.submit 'create book', class: "btn btn-success"  %>
 <% end %>
 </div>

<div class="col-lg-8">
<h1>Books</h1>
<table class="table table-striped">
 <thead>
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
   <th colspan="3"><th>
  </tr>
 </thead>
 <tbody>
  <% @books.each do |book| %>
  <tr>
   <span>
    <th>
     <%= link_to book_path(book.id) do %>
      <%= image_tag book.user.get_profile_image(100,100) %>
     <% end %>
     </th>
   </span>
   <th><%= link_to book.title, book_path(book.id) %></th>
   <th><%= book.body %></th>
  </tr>
  <% end %>
 <tbody>
</table>
</div>
</div>
</div>