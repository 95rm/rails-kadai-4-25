<h1>New book</h1>
 <%= form_with model: @book do |f| %>
   <h4>Title</h4>
    <%= f.text_field :title %>
   <h4>Opinion</h4>
    <%= f.text_area :body %>
   <%= f.submit 'create book' %>
 <% end %>

<% @books.each do |book| %>
<div>
  <a href = "/books/id"><%= book.title %></a>
  <%= book.body %>
  <%= book.user.name %>
<% end %>
</div>
