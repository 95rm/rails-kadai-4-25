<h1>New book</h1>
 <%= form_with model: @book do |f| %>
   <h4>Title</h4>
    <%= f.text_field :title %>
   <h4>Opinion</h4>
    <%= f.text_area :body %>
   <%= f.submit 'create book' %>
 <% end %>

<% @books.each do |book| %>
<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Opinion</th>
  </tr>
 </thead>
 <tbody>
  <tr>
   <span>
    <th><%= link_to book.title, book_path(book.id) %></th>
   </span>
   <th><%= book.body %></th>
   <th><%= book.user.name %></th>
  </tr>
 <tbody>
</table>
<% end %>

